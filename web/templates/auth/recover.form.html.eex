<%= form_tag recover_password_path(@conn, :recover_password), method: :post, "data-remote": true,
      id: "login", do: fn -> %>
  <div class="form-group">
    <label>E-Mail</label>
    <input type="email" name="email" class="form-control"/>
  </div>

  <div class="form-group">
    <%= submit "Recover Password", class: "btn btn-primary" %>
  </div>
<% end %>
